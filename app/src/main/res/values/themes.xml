<resources>

    <!-- Tema base personalizado -->
    <style name="Theme.ByteStore" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Fondo y texto -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/inter</item>

        <!-- Ripple -->
        <item name="android:colorControlHighlight">@color/lite_gray</item>

        <!-- Desactivar tint automático Material -->
        <item name="colorControlNormal">@null</item>
        <item name="colorControlActivated">@null</item>
        <item name="colorControlHighlight">@null</item>

        <!-- IMPORTANTE: quitar buttonStyle global -->
        <item name="buttonStyle">@null</item>

        <!-- Evitar tint de MaterialButtons -->
        <item name="materialButtonStyle">@style/Widget.ByteStore.Button.NoTint</item>

        <!-- Inputs -->
        <item name="editTextStyle">@style/Widget.ByteStore.Input</item>

        <!-- Checkbox / Radio -->
        <item name="checkboxStyle">@style/Widget.ByteStore.CheckBox</item>
        <item name="radioButtonStyle">@style/Widget.ByteStore.RadioButton</item>

        <!-- Cursor -->
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>

        <!-- Progressbar -->
        <item name="android:indeterminateTint">@color/dark_green</item>
        <item name="android:progressTint">@color/dark_green</item>

    </style>


    <!-- Estilo para evitar que MaterialComponents cambie los colores de los botones -->
    <style name="Widget.ByteStore.Button.NoTint" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:backgroundTint">@null</item>
    </style>
    <!-- Estilo del BottonSheet -->
    <style name="Theme.ByteStore.BottomSheet" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="buttonStyle">@null</item>
        <item name="materialButtonStyle">@style/Widget.ByteStore.Button.NoTint</item>
        <item name="editTextStyle">@style/Widget.ByteStore.Input</item>
        <item name="checkboxStyle">@style/Widget.ByteStore.CheckBox</item>
        <item name="radioButtonStyle">@style/Widget.ByteStore.RadioButton</item>
    </style>
    <!-- Estilo del AlertDialog -->
    <style name="Theme.ByteStore.AlertDialog" parent="@style/ThemeOverlay.AppCompat.Dialog.Alert">
        <!-- Fondo -->
        <item name="android:windowBackground">@drawable/card_background</item>
        <!-- Tipografías -->
        <item name="android:fontFamily">@font/inter</item>
        <item name="textColorAlertDialogListItem">@color/black</item>

        <!-- Botones -->
        <item name="buttonBarPositiveButtonStyle">@style/ByteStore.Dialog.PositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/ByteStore.Dialog.NegativeButton</item>
    </style>
    <!-- Espaciado de los botones del AlertDialog -->
    <style name="ByteStore.Dialog.PositiveButton" parent="Widget.ByteStore.Button.Primary">
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="ByteStore.Dialog.NegativeButton" parent="Widget.ByteStore.Button.Secondary">
        <item name="android:layout_marginEnd">8dp</item>
    </style>


</resources>
