<resources>

    <!-- Tema base personalizado -->
    <style name="Theme.ByteStore" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Fondo y texto -->
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/inter</item>

        <!-- Fuente global -->
        <item name="android:includeFontPadding">false</item>

        <!-- Control del ripple -->
        <item name="android:colorControlHighlight">@color/lite_gray</item>

        <!-- IMPORTANTE: Deshabilitar tintado automÃ¡tico de botones -->
        <item name="materialButtonStyle">@style/Widget.ByteStore.Button.NoTint</item>

    </style>

    <!-- Estilo para evitar que MaterialComponents cambie los colores de los botones -->
    <style name="Widget.ByteStore.Button.NoTint" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:backgroundTint">@null</item>
    </style>

</resources>
