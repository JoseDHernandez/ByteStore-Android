<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado seleccionado o presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/lite_gray" />
            <corners android:radius="8dp" />
            <padding
                android:left="8dp"
                android:right="8dp"
                android:top="6dp"
                android:bottom="6dp" />
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="8dp" />
            <padding
                android:left="8dp"
                android:right="8dp"
                android:top="6dp"
                android:bottom="6dp" />
        </shape>
    </item>

</selector>
