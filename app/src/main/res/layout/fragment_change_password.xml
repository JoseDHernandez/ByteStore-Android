<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.account.ChangePasswordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/card_background"
        android:orientation="vertical">

        <!-- Advertencia -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="Cuidado"
            android:textColor="@color/dark_green"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/inter"
            android:text="Al cambiar su contraseña se cerrará la sesión"
            android:textSize="14sp" />

        <!-- Nueva contraseña -->
        <TextView
            style="@style/Widget.ByteStore.InputLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:labelFor="@id/etNewPassword"
            android:text="Nueva contraseña" />

        <EditText
            android:id="@+id/etNewPassword"
            style="@style/Widget.ByteStore.Input"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/tvNewPasswordError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:textColor="#E53935"
            android:textSize="12sp"
            android:visibility="gone" />

        <!-- Confirmar contraseña -->
        <TextView
            style="@style/Widget.ByteStore.InputLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:labelFor="@id/etConfirmPassword"
            android:text="Confirmar nueva contraseña" />

        <EditText
            android:id="@+id/etConfirmPassword"
            style="@style/Widget.ByteStore.Input"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/tvConfirmPasswordError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#E53935"
            android:textSize="12sp"
            android:visibility="gone" />

        <!-- Requisitos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="La contraseña debe contener:"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="4dp"
            android:text="• 8 a 20 caracteres\n• mayúsculas (A-Z)\n• minúsculas (a-z)\n• números (0-9)\n• caracteres especiales (#$%/*?!)"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Botones -->
    <Button
        android:id="@+id/btnChangePassword"
        style="@style/Widget.ByteStore.Button.Primary"
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        android:text="Cambiar contraseña" />

    <Button
        android:id="@+id/btnCancel"
        style="@style/Widget.ByteStore.Button.SecondaryOutline"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:text="Cancelar" />

</LinearLayout>