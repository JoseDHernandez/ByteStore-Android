<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.account.ChangePasswordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/card_background"
        android:orientation="vertical">

        <!-- Advertencia -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cuidado"
            android:textColor="#009688"
            android:textSize="16sp"
            android:fontFamily="@font/inter_medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="20dp"
            android:text="Al cambiar su contraseña se cerrará la sesión"
            android:textSize="14sp"
            android:fontFamily="@font/inter" />

        <!-- Nueva contraseña -->
        <TextView
            style="@style/Widget.ByteStore.InputLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nueva contraseña" />

        <EditText
            android:id="@+id/etNewPassword"
            style="@style/Widget.ByteStore.Input"
            android:hint="••••••••"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/tvNewPasswordError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#E53935"
            android:textSize="12sp"
            android:fontFamily="@font/inter"
            android:visibility="gone" />

        <!-- Confirmar contraseña -->
        <TextView
            style="@style/Widget.ByteStore.InputLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Confirmar nueva contraseña" />

        <EditText
            android:id="@+id/etConfirmPassword"
            style="@style/Widget.ByteStore.Input"
            android:hint="••••••••"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/tvConfirmPasswordError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#E53935"
            android:textSize="12sp"
            android:fontFamily="@font/inter"
            android:visibility="gone" />

        <!-- Requisitos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="La contraseña debe contener:"
            android:textSize="12sp"
            android:textColor="@color/lite_gray"
            android:fontFamily="@font/inter" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• 8 a 20 caracteres\n• mayúsculas (A-Z)\n• minúsculas (a-z)\n• números (0-9)\n• caracteres especiales (#$%/*?!)"
            android:textSize="12sp"
            android:textColor="@color/lite_gray"
            android:fontFamily="@font/inter"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

    <!-- Botones -->
    <Button
        android:id="@+id/btnChangePassword"
        style="@style/Widget.ByteStore.Button.Primary"
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        android:text="Cambiar contraseña" />

    <Button
        android:id="@+id/btnCancel"
        style="@style/Widget.ByteStore.Button.PrimaryOutline"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:text="Cancelar" />

</LinearLayout>