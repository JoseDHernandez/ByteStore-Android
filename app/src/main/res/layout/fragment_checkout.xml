<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="20dp"
        android:paddingBottom="40dp">

        <!-- Método de entrega -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Método de entrega"
                android:textSize="18sp"

                />

            <RadioGroup
                android:id="@+id/rgDeliveryMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Opción 1: Envío a domicilio -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:minHeight="48dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbHomeDelivery"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:checked="true"
                        android:fontFamily="@font/inter_regular"
                        android:text="@string/home_delivery"

                        app:layout_constraintVertical_bias="0.0" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/txtHomeDeliveryPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/barlow_regular"
                        android:text="@string/delivery_price"

                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Opción 2: Recoger en tienda -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbStorePickup"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="@string/store_pickup" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/txtStorePickupPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="@string/free"
                        android:textColor="@color/dark_green"
                        android:textStyle="bold" />
                </LinearLayout>
            </RadioGroup>

            <!-- Dirección de entrega (visible solo con envío a domicilio) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/inter_medium"
                android:labelFor="@id/txtAddress"
                android:text="Dirección de entrega"
                android:textColor="@color/dark_green" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autofillHints="postalAddress"
                    android:fontFamily="@font/inter_regular"
                    android:inputType="textPostalAddress"
                    android:text="Calle 52 # 75b - 21" />

                <ImageButton
                    android:id="@+id/btnEditAddress"
                    style="@style/Widget.ByteStore.Button.Secondary"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="10dp"
                    android:contentDescription="Editar dirección"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_edit"
                    app:tint="@color/white" />
            </LinearLayout>
        </LinearLayout>

        <!-- Método de pago -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Método de pago"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/rgPaymentMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:gravity="center_vertical"
                    android:id="@+id/rbCreditCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:minHeight="48dp"
                    android:text="Tarjeta de crédito / débito" />

                <RadioButton
                    android:gravity="center_vertical"
                    android:id="@+id/rbPSE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:minHeight="48dp"
                    android:text="Transferencia (PSE)" />

                <!-- Pago en efectivo con nota -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbCash"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:checked="true"
                        android:text="Pago en efectivo" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/txtPaymentLink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/inter_regular"
                        android:text="Contra entrega"
                        android:textColor="@color/dark_green"
                        android:textSize="12sp" />
                </LinearLayout>
            </RadioGroup>
        </LinearLayout>

        <!-- Resumen del pedido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Resumen del pedido"
                android:textSize="16sp" />

            <!-- Subtotal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_regular"
                    android:text="Subtotal" />

                <TextView
                    android:id="@+id/txtSubtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/barlow_regular"
                    tools:text="$7,991,480" />
            </LinearLayout>

            <!-- Envío -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_regular"
                    android:text="Envío" />

                <TextView
                    android:id="@+id/txtShipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/barlow_regular"
                    tools:text="$16,000" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="12dp"
                android:background="@color/lite_gray" />

            <!-- Total -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_medium"
                    android:text="Total"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/barlow_medium"
                    android:textSize="16sp"
                    tools:text="$8,008,480" />
            </LinearLayout>
        </LinearLayout>

        <!-- Botón de confirmar compra -->
        <Button
            android:id="@+id/btnConfirmPurchase"
            style="@style/Widget.ByteStore.Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Confirma compra" />

    </LinearLayout>
</ScrollView>