<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Header gestionado por Activity (topBar). Eliminado header duplicado del fragment -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Método de entrega -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Método de entrega"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/inter_medium"
                        android:layout_marginBottom="12dp" />

                    <RadioGroup
                        android:id="@+id/rgDeliveryMethod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Opción 1: Envío a domicilio -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:layout_marginBottom="8dp">

                            <RadioButton
                                android:id="@+id/rbHomeDelivery"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:checked="true"
                                android:fontFamily="@font/inter_regular"
                                android:text="@string/home_delivery"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/txtHomeDeliveryPrice"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.0" />

                            <TextView
                                android:id="@+id/txtHomeDeliveryPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/barlow_regular"
                                android:text="@string/delivery_price"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:layout_marginEnd="16dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!-- Opción 2: Recoger en tienda -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp">

                            <RadioButton
                                android:id="@+id/rbStorePickup"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:fontFamily="@font/inter_regular"
                                android:text="@string/store_pickup"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/txtStorePickupPrice"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" />

                            <TextView
                                android:id="@+id/txtStorePickupPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_medium"
                                android:text="@string/free"
                                android:textColor="#0B683C"
                                android:textStyle="bold"
                                android:layout_marginEnd="16dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </RadioGroup>

                    <!-- Dirección de entrega (visible solo con envío a domicilio) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:text="Dirección de entrega"
                        android:textColor="#00515B"
                        android:textSize="12sp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/txtAddress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/inter_regular"
                            android:text="Calle 52, av 4"
                            android:textColor="#000000" />

                        <ImageButton
                            android:id="@+id/btnEditAddress"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:tint="#007381"
                            android:contentDescription="Editar dirección"
                            app:srcCompat="@drawable/ic_edit" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Método de pago -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Método de pago"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp" />

                    <RadioGroup
                        android:id="@+id/rgPaymentMethod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/rbCreditCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tarjeta de crédito / débito"
                            android:minHeight="48dp"
                            android:layout_marginBottom="8dp" />

                        <RadioButton
                            android:id="@+id/rbPSE"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Transferencia (PSE)"
                            android:minHeight="48dp"
                            android:layout_marginBottom="8dp" />

                        <!-- Pago en efectivo con nota -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp">

                            <RadioButton
                                android:id="@+id/rbCash"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Pago en efectivo"
                                android:checked="true"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@id/txtPaymentLink"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" />

                            <TextView
                                android:id="@+id/txtPaymentLink"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Contra entrega"
                                android:textColor="#00515B"
                                android:fontFamily="@font/inter_regular"
                                android:textSize="12sp"
                                android:layout_marginEnd="16dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Resumen del pedido -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resumen del pedido"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:fontFamily="@font/inter_medium"
                        android:layout_marginBottom="12dp" />

                    <!-- Subtotal -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Subtotal"
                            android:fontFamily="@font/inter_regular"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/txtSubtotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/barlow_regular"
                            android:textColor="#000000"
                            tools:text="$7,991,480" />
                    </LinearLayout>

                    <!-- Envío -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Envío"
                            android:fontFamily="@font/inter_regular"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/txtShipping"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/barlow_regular"
                            android:textColor="#000000"
                            tools:text="$16,000" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E0E0E0"
                        android:layout_marginBottom="12dp" />

                    <!-- Total -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:fontFamily="@font/inter_medium" />

                        <TextView
                            android:id="@+id/txtTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:fontFamily="@font/barlow_medium"
                            tools:text="$8,008,480" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Botón de confirmar compra -->
            <Button
                android:id="@+id/btnConfirmPurchase"
                style="@style/Widget.ByteStore.Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Confirma compra"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:backgroundTint="#0B844D"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>