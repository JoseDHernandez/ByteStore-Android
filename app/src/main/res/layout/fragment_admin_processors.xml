<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admin.product.processor.AdminProcessorsFragment">
    <!-- filtros -->
    <LinearLayout
        android:id="@+id/filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Spinner
            android:layout_weight="1"
            android:id="@+id/brandSpinner"
            style="@style/Widget.ByteStore.Spinner"
            android:layout_width="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_height="48dp"
            android:layout_marginEnd="10dp" />

        <Spinner
            android:layout_weight="1"
            android:id="@+id/seriesSpinner"
            style="@style/Widget.ByteStore.Spinner"
            android:layout_width="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_height="48dp"
            android:layout_marginEnd="10dp" />

        <Spinner
            android:layout_weight="1"
            android:id="@+id/coresSpinner"
            style="@style/Widget.ByteStore.Spinner"
            android:layout_width="wrap_content"
            android:spinnerMode="dropdown"
            android:layout_height="48dp" />

    </LinearLayout>
    <!-- Carga -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filters" />
    <!-- listado -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingTop="20dp"
        android:paddingBottom="90dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filters"
        tools:listitem="@layout/item_processor_card" />
    <LinearLayout
        android:visibility="gone"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/filters"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/errorLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Error al obtener los procesadores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <!-- Boton de agregar -->
    <ImageButton
        android:id="@+id/addProcessor"
        style="@style/Widget.ByteStore.Button.Primary"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:contentDescription="Registrar un procesador"
        android:elevation="2dp"
        android:src="@drawable/ic_plus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>